generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id         Int      @id @default(autoincrement())
  groupUrl   String   @map("group_url")
  postText   String   @map("post_text")
  author     String
  postUrl    String   @map("post_url")
  postDate   DateTime @map("post_date")
  postType   String?  @default("unclassified") @map("post_type") // "job_offer", "job_seeker", "unclassified"
  scrapedAt  DateTime @default(now()) @map("scraped_at")
  
  @@map("jobs")
}
